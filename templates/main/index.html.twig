{% block javascripts %}

<script type="text/javascript">

    window.onload = function what(){
    var date = new Date();
    var time = document.getElementById("date");

    /* Fonction ' JOUR SEMAINE ' */
    var current_day = date.getDay();
    var days = ['Dimanche', 'Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi', 'Samedi'];
    var day = days[current_day];

    /* Fonction ' JOUR ' */
    var number = date.getDate();

    /* Fonction ' MOIS ' */
    var current_month = date.getMonth();
    var months = ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre' ];
    var month = months[current_month];

    /* Fonction ' ANNEE ' */
    var year = date.getFullYear();


    var date = day + " " + number + " " + month + " " + year;

    time.innerHTML = date;

    }
</script>


