{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<main class="container mx-auto main_page">
    <div class="mt-36 h-full">
        <form method="post" class="flex flex-col items-center">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {# <h1 class="mb-3 text-center text-3xl font-bold">Connexion</h1> #}
            <div class="flex flex-col bg-slate-200 w-1/2 h-96 drop-shadow-xl rounded-md">
                <div class="flex flex-col justify-center items-center my-6">
                    <input type="email" value="{{ last_username }}" class="w-72 rounded-md py-2 px-3" name="email" id="inputEmail" placeholder="Email" autocomplete="email" required autofocus>
                </div>
                <div class="flex flex-col justify-center items-center">
                    <input type="password" name="password" id="inputPassword" class="w-72 rounded-md py-2 px-3"   placeholder="Mot de passe" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <div class="flex flex-col justify-center items-center">
                    <button class="w-72 rounded-md py-2 px-10 mt-4 text-white bg-blue-800" type="submit">
                        Connexion
                    </button>
                </div>

                <div class="flex flex-col items-center mt-5">
                    <h2 class="font-bold">Compte de d√©monstration</h2>
                    <p class="my-2">Email: demo@gmail.com</p>
                    <p class="my-2">Mot de passe: demo1234$</p>
                    <p>Vous n'avez pas de compte ? <a href="{{path('app_register')}}" class="text-blue-500 underline ">Inscrivez-vous ici !</a></p>
                </div>
            </div>
            
        </form>
    </div>
    
</main>
{% endblock %}
